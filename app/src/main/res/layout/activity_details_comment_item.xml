<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:background="@color/app_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="40dp">
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/activity_details_comment_item_civ"
         android:src="@mipmap/icon_default_img"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:layout_width="40dp"
         android:layout_height="40dp" />
     <TextView
         android:id="@+id/activity_details_comment_item_nametv"
         android:layout_toRightOf="@id/activity_details_comment_item_civ"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="10dp"
         android:textColor="@color/app_black"
         android:scrollbarSize="20sp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <TextView
         android:id="@+id/activity_details_comment_item_timetv"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/activity_details_comment_item_iv"
            android:layout_width="80dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/activity_details_comment_item_tv"
            android:scrollbarSize="10sp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/activity_details_comment_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>