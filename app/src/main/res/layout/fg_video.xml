<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<include-->
        <!--layout="@layout/base_title_green"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"></include>-->
    <RelativeLayout
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/basegreen_title_tv"
            android:text="VR城市空间"
            android:layout_centerInParent="true"
            android:textSize="23sp"
            android:textColor="@color/app_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <q.rorbin.qrefreshlayout.QRefreshLayout
        android:id="@+id/fg_video_qrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/app_white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <!--推荐-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <!--1-->
                            <LinearLayout
                                android:id="@+id/fg_video_1"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/fg_video_1_iv"
                                    android:layout_weight="5"
                                    android:src="@mipmap/icon_default_img"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:id="@+id/fg_video_1_tv"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/app_black_70"
                                    android:layout_marginTop="5dp"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        android:id="@+id/fg_video_1_title_tv"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/fg_home_recommend_1_tv"
                                        android:textSize="10sp"
                                        android:text="15"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:visibility="gone"
                                        android:layout_centerVertical="true"
                                        android:src="@mipmap/icon_fg_home_collection"
                                        android:layout_toLeftOf="@id/fg_home_recommend_1_tv"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="20dp"
                                        android:layout_height="12dp" />
                                </RelativeLayout>
                            </LinearLayout>
                            <!--2-->
                            <LinearLayout
                                android:id="@+id/fg_video_2"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/fg_video_2_iv"
                                    android:layout_weight="5"
                                    android:src="@mipmap/icon_default_img"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:id="@+id/fg_video_2_tv"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/app_black_70"
                                    android:layout_marginTop="5dp"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        android:id="@+id/fg_video_2_title_tv"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/fg_home_recommend_2_tv"
                                        android:textSize="10sp"
                                        android:text="15"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:visibility="gone"
                                        android:src="@mipmap/icon_fg_home_collection"
                                        android:layout_toLeftOf="@id/fg_home_recommend_2_tv"
                                        android:layout_marginRight="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="20dp"
                                        android:layout_height="12dp" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <!--3-->
                            <LinearLayout
                                android:id="@+id/fg_video_3"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/fg_video_3_iv"
                                    android:layout_weight="5"
                                    android:src="@mipmap/icon_default_img"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:id="@+id/fg_video_3_tv"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/app_black_70"
                                    android:layout_marginTop="5dp"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        android:id="@+id/fg_video_3_title_tv"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/fg_home_recommend_3_tv"
                                        android:textSize="10sp"
                                        android:text="15"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:visibility="gone"
                                        android:src="@mipmap/icon_fg_home_collection"
                                        android:layout_toLeftOf="@id/fg_home_recommend_3_tv"
                                        android:layout_marginRight="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="20dp"
                                        android:layout_height="12dp" />
                                </RelativeLayout>
                            </LinearLayout>
                            <!--4-->
                            <LinearLayout
                                android:id="@+id/fg_video_4"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/fg_video_4_iv"
                                    android:layout_weight="5"
                                    android:src="@mipmap/icon_default_img"
                                    android:scaleType="fitXY"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:id="@+id/fg_video_4_tv"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/app_black_70"
                                    android:layout_marginTop="5dp"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        android:id="@+id/fg_video_4_title_tv"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/fg_home_recommend_4_tv"
                                        android:textSize="10sp"
                                        android:text="15"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:visibility="gone"
                                        android:src="@mipmap/icon_fg_home_collection"
                                        android:layout_toLeftOf="@id/fg_home_recommend_4_tv"
                                        android:layout_marginRight="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_width="20dp"
                                        android:layout_height="12dp" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--推荐-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:text="推荐"
                            android:textColor="@color/app_black_70"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/fg_video_video_lv"
                            android:scrollbars="none"
                            android:dividerHeight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></ListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </q.rorbin.qrefreshlayout.QRefreshLayout>
</LinearLayout>