<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/base_title_green"
        android:layout_height="48dp"
        android:layout_width="match_parent"></include>
    <View
    android:background="@color/app_segmentation_gray"
    android:layout_width="match_parent"
    android:layout_height="15dp"></View>
    <q.rorbin.qrefreshlayout.QRefreshLayout
        android:id="@+id/activity_list_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/actiity_list_lv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</q.rorbin.qrefreshlayout.QRefreshLayout>
</LinearLayout>