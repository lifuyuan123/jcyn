                <!--android:layout_height="match_parent"></View>-->
                <!--<RelativeLayout-->
                <!--android:id="@+id/activity_deails_colleage_rl"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent">-->
                <!--<ImageView-->
                <!--android:src="@mipmap/icon_collection"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp" />-->
                <!--</RelativeLayout>-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!--评论-->
    <LinearLayout
        android:layout_weight="1"
        android:background="#f9f9f7"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/activity_deails_upload_img"
            android:src="@mipmap/icon_deails_comment_img_bt"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/activity_deails_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/activity_deails_et"
                android:background="@null"
                android:hint="输入评论内容"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/activity_deails_comment_bt"
            android:text="发表"
            android:background="@color/app_color"
            android:textSize="14sp"
            android:textColor="@color/app_white"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="30dp" />
    </LinearLayout>


