<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_panorama2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/basegreen_title_bg"
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--返回按钮-->
        <RelativeLayout
            android:id="@+id/basegreen_back_rl"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="48dp">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back_white"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <!--title-->
        <TextView
            android:id="@+id/basegreen_title_tv"
            android:text="720全景"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="@color/app_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <q.rorbin.qrefreshlayout.QRefreshLayout
        android:id="@+id/fg_video_qrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <!--<ScrollView-->
            <!--android:focusableInTouchMode="true"-->
            <!--android:focusable="true"-->
            <!--android:scrollbars="none"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ListView
                            android:id="@+id/fg_video_video_lv"
                            android:scrollbars="none"
                            android:dividerHeight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></ListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <!--</ScrollView>-->
    </q.rorbin.qrefreshlayout.QRefreshLayout>

</LinearLayout>
