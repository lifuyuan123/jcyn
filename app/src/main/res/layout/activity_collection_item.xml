<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/activity_collection_ll"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_width="150dp"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/activity_collection_item_iv"
            android:src="@mipmap/icon_default_img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.sctjsj.jcyn.util.LinCheckBox
            android:id="@+id/activity_collection_item_lcb"
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/activity_collection_item_titletv"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/activity_collecion_indroation_tv"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fg_home_recommend_1_tv"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fg_home_collection"
            android:layout_toLeftOf="@id/fg_home_recommend_1_tv"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="12dp" />
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>